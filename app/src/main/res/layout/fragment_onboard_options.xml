<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_black"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_60dp"
        android:paddingTop="@dimen/dimen_35dp"
        android:paddingEnd="@dimen/dimen_60dp"
        android:paddingBottom="@dimen/dimen_35dp">

        <View
            style="@style/divider_onboard"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp" />

        <TextView
            android:id="@+id/fragment_onboard_options_add_user"
            style="@style/style_text_regular"
            android:layout_width="match_parent"
            android:layout_gravity="start"
            android:drawableEnd="@drawable/ic_forward"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_30dp"
            android:paddingEnd="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_30dp"
            android:text="@string/add_new_onboard_user"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_22sp" />

        <View
            style="@style/divider_onboard"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp" />

        <TextView
            android:id="@+id/fragment_onboard_options_history"
            style="@style/style_text_regular"
            android:layout_width="match_parent"
            android:layout_gravity="start"
            android:drawableEnd="@drawable/ic_forward"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_30dp"
            android:paddingEnd="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_30dp"
            android:text="@string/history"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_22sp" />

        <View
            style="@style/divider_onboard"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp" />

        <TextView
            android:id="@+id/fragment_onboard_options_stats"
            style="@style/style_text_regular"
            android:layout_width="match_parent"
            android:layout_gravity="start"
            android:drawableEnd="@drawable/ic_forward"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_30dp"
            android:paddingEnd="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_30dp"
            android:text="@string/stats"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_22sp" />

        <View style="@style/divider_onboard" />

    </LinearLayout>
</LinearLayout>