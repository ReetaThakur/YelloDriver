<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_rect_corner_bg_white"
    android:maxWidth="@dimen/dimen_600dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_15dp"
    android:paddingTop="@dimen/dimen_15dp"
    android:paddingEnd="@dimen/dimen_15dp"
    android:paddingBottom="@dimen/dimen_5dp">

    <TextView
        android:id="@+id/dialog_custom_common_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimen_16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dialog_custom_common_tvMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_custom_common_tvTitle"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimen_13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_custom_common_tvMsg"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_custom_common_btnNegative"
            style="@style/StyleTvDialogAction"
            android:text="@string/cancel"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dialog_custom_common_btnPositive"
            style="@style/StyleTvDialogAction"
            android:text="@string/submit" />
    </LinearLayout>
</RelativeLayout>