<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <include
        android:id="@+id/toolbar_user_onboarding_step_four"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/drawable_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_user_onboarding_step_four">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_10dp">

            <TextView
                style="@style/style_text_regular"
                android:layout_gravity="center"
                android:text="@string/step_4_4"
                android:textColor="@color/colorLightGray"
                android:textSize="@dimen/font_16sp" />

            <TextView
                style="@style/style_text_bold"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_70dp"
                android:text="@string/lbl_use_pass"
                android:textSize="@dimen/font_32sp" />

            <LinearLayout
                android:layout_width="@dimen/dimen_300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/drawable_black_background_pass"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:paddingEnd="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_user_onboarding_step_four_tvPassType"
                        style="@style/style_text_bold"
                        android:layout_alignParentStart="true"
                        android:text="@string/lbl_pass_type"
                        android:textSize="@dimen/font_12sp" />

                    <TextView
                        android:id="@+id/fragment_user_onboarding_step_four_tvPassTypeValue"
                        style="@style/style_text_regular"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_below="@+id/fragment_user_onboarding_step_four_tvPassType"
                        android:text="Basic"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_12sp" />

                    <TextView
                        android:id="@+id/fragment_user_onboarding_step_four_tvPassID"
                        style="@style/style_text_bold"
                        android:layout_alignParentEnd="true"
                        android:text="@string/lbl_pass_id"
                        android:textSize="@dimen/font_12sp" />

                    <TextView
                        android:id="@+id/fragment_user_onboarding_step_four_tvPassIDValue"
                        style="@style/style_text_regular"
                        android:layout_below="@+id/fragment_user_onboarding_step_four_tvPassID"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:text="001"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_12sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="@dimen/dimen_100dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:src="@drawable/img_barcode" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_user_onboarding_step_four_tvPurchased"
                        style="@style/style_text_bold"
                        android:layout_alignParentStart="true"
                        android:text="@string/lbl_purchased"
                        android:textSize="@dimen/font_12sp" />

                    <TextView
                        android:id="@+id/fragment_user_onboarding_step_four_tvPurchasedValue"
                        style="@style/style_text_regular"
                        android:layout_below="@+id/fragment_user_onboarding_step_four_tvPurchased"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:text="25/05/2020"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_12sp" />

                    <TextView
                        android:id="@+id/fragment_user_onboarding_step_four_tvValidity"
                        style="@style/style_text_bold"
                        android:layout_alignParentEnd="true"
                        android:text="@string/lbl_validity"
                        android:textSize="@dimen/font_12sp" />

                    <TextView
                        android:id="@+id/fragment_user_onboarding_step_four_tvValdityValue"
                        style="@style/style_text_regular"
                        android:layout_below="@+id/fragment_user_onboarding_step_four_tvValidity"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_marginEnd="@dimen/dimen_5dp"
                        android:text="5 days"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_12sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:background="@color/colorWhite" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fragment_user_onboarding_step_four_tvAmount"
                        style="@style/style_text_regular"
                        android:text="@string/lbl_amount"
                        android:textSize="@dimen/font_12sp" />

                    <TextView
                        android:id="@+id/fragment_user_onboarding_step_four_tvAmountValue"
                        style="@style/style_text_bold"
                        android:layout_alignParentEnd="true"
                        android:text="$ 100"
                        android:textSize="@dimen/font_14sp" />

                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/fragment_user_onboarding_step_four_btnSend"
                style="@style/style_button_bold"
                android:layout_width="@dimen/dimen_300dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_100dp"
                android:layout_marginTop="@dimen/dimen_minus10dp"
                android:layout_marginEnd="@dimen/dimen_100dp"
                android:background="@drawable/drawable_button_usepass"
                android:text="@string/lbl_send_boarding_pass"
                android:textSize="@dimen/font_20sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>