<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/dimen_650dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/drawable_black_background_earining"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingEnd="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_40dp">

        <TextView
            android:id="@+id/fragment_earning_txtLastTrip"
            style="@style/style_text_regular"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="Last Tip"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_22sp" />

        <TextView
            android:id="@+id/fragment_earning_txtTripAmount"
            style="@style/style_text_bold"
            android:layout_below="@+id/fragment_earning_txtLastTrip"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_centerHorizontal="true"
            android:text="Tip Amount"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_22sp" />

        <TextView
            android:id="@+id/fragment_earning_txtPrice"
            style="@style/style_text_bold"
            android:layout_below="@+id/fragment_earning_txtTripAmount"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:text="$0"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_55sp" />

        <LinearLayout
            android:id="@+id/fragment_earning_llRider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_earning_txtPrice"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dimen_80dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_earning_txtRider"
                style="@style/style_text_bold"
                android:text="Rider"
                android:textSize="@dimen/font_22sp" />

            <TextView
                android:id="@+id/fragment_earning_txtRiderValue"
                style="@style/style_text_bold"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="N/A"
                android:width="@dimen/dimen_80dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_22sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_earning_llTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_earning_txtPrice"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_earning_txtTime"
                style="@style/style_text_bold"
                android:layout_gravity="center"
                android:text="Time"
                android:textSize="@dimen/font_22sp" />

            <TextView
                android:id="@+id/fragment_earning_txtTimeValue"
                style="@style/style_text_bold"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="N/A"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_22sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_earning_llDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_earning_txtPrice"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_earning_txtDistance"
                style="@style/style_text_bold"
                android:layout_gravity="center"
                android:text="Distance"
                android:textSize="@dimen/font_22sp" />

            <TextView
                android:id="@+id/fragment_earning_txtDistanceValue"
                style="@style/style_text_bold"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="N/A"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_22sp" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>