<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_600dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimen_50dp"
    android:background="@drawable/rating_dialog_background"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_30dp"
    android:paddingTop="@dimen/dimen_30dp"
    android:paddingEnd="@dimen/dimen_30dp"
    android:paddingBottom="@dimen/dimen_50dp">

    <TextView
        style="@style/style_text_regular"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:gravity="center"
        android:text="@string/renew_pass"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_38sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp">

        <TextView
            style="@style/style_text_regular"
            android:layout_alignParentStart="true"
            android:text="@string/sent_payment_link"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_38sp" />

        <TextView
            android:id="@+id/renewPass_txtPrice"
            style="@style/style_text_regular"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_38sp"
            tools:text="Price:- $30" />

    </RelativeLayout>


    <RadioGroup
        android:id="@+id/renewPass_rbGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_75dp"
        android:layout_marginTop="@dimen/dimen_70dp"
        android:background="@drawable/drawable_renew_pass"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/renewPass_rbOneDay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/drawable_renew_pass_button"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="1 day"
            android:textAllCaps="false"
            android:textColor="@color/drawable_renew_pass_text_selector"
            android:textSize="@dimen/font_25sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/renewPass_rbTwoDay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/drawable_renew_pass_button"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="2 day"
            android:textAllCaps="false"
            android:textColor="@color/drawable_renew_pass_text_selector"
            android:textSize="@dimen/font_25sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/renewPass_rbThreeDay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/drawable_renew_pass_button"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="3 day"
            android:textAllCaps="false"
            android:textColor="@color/drawable_renew_pass_text_selector"
            android:textSize="@dimen/font_25sp"
            android:textStyle="bold" />
    </RadioGroup>

    <Button
        android:id="@+id/renewPassDialogBtnSubmit"
        style="@style/style_button_bold"
        android:layout_width="@dimen/dimen_350dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_70dp"
        android:text="@string/submit"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_25sp" />

    <Button
        android:id="@+id/renewPassDialogBtnNotNow"
        style="@style/style_button_bold"
        android:layout_width="@dimen/dimen_350dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:background="@drawable/rounded_corner_empty_bg"
        android:text="@string/not_now"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_25sp" />

</LinearLayout>