<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pure_black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/toolbar_imgBack"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_alignParentStart="true"
            android:padding="@dimen/dimen_15dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:layout_below="@+id/toolbar_imgBack"
            android:id="@+id/toolbar_tvTitle"
            style="@style/style_text_bold"
            android:padding="@dimen/dimen_15dp"
            android:textSize="@dimen/font_28sp"
            android:textStyle="bold"
            tools:text="Toolbar text" />

        <ImageView
            android:id="@+id/toolbar_imgClose"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:padding="@dimen/dimen_15dp"
            android:src="@drawable/ic_close_toolbar"
            android:visibility="gone" />

        <Button
            android:id="@+id/toolbar_btnCancel"
            style="@style/style_button_bold"
            android:layout_width="wrap_content"
            android:layout_below="@+id/toolbar_imgBack"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:background="@drawable/rounded_corner_empty_bg"
            android:paddingStart="@dimen/dimen_20dp"
            android:paddingEnd="@dimen/dimen_20dp"
            android:text="@string/cancel"
            android:textSize="@dimen/font_20sp"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>