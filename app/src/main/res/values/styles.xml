    <style name="StyleText.DialogAction" parent="StyleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/dimen_12dp</item>
    </style>

    <style name="StyleTvDialogAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/dimen_12dp</item>
    </style>

    <style name="OtpWidget" />

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="style_scrollbar">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarSize">@dimen/dimen_2dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/drawable_scrollbar</item>
    </style>

    <style name="menurowstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dimen_20dp</item>
        <item name="android:paddingBottom">@dimen/dimen_20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="smenu_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_0.5dp</item>
        <item name="android:background">#ffffff</item>
        <item name="alpha">0.2</item>
    </style>

    <style name="divider_onboard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_0.5dp</item>
        <item name="android:background">#ffffff</item>
        <item name="alpha">0.2</item>
    </style>

    <style name="smnu_imagestyle">
        <item name="android:layout_width">@dimen/dimen_35dp</item>
        <item name="android:layout_height">@dimen/dimen_35dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="smenu_textstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginStart">@dimen/dimen_50dp</item>
        <!--        <item name="fontFamily">@font/avenirnextltpro_regular</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_25sp</item>
        <item name="android:lineSpacingExtra">20sp</item>
    </style>


    <style name="nf_setting_rowstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/dimen_25dp</item>
        <item name="android:paddingTop">@dimen/dimen_25dp</item>
        <item name="android:paddingBottom">@dimen/dimen_25dp</item>
        <item name="android:paddingEnd">@dimen/dimen_10dp</item>
    </style>

    <style name="nf_setting_titile_textstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_30sp</item>
    </style>

    <style name="nf_setting_switchstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimen_20dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_20dp</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
        <item name="android:track">@drawable/switch_track_custom</item>
        <item name="android:switchMinWidth">@dimen/dimen_85dp</item>
        <item name="android:thumb">@drawable/switch_thumb_custom</item>
    </style>

    <style name="GreenSwitch" parent="AppTheme">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/startgreen</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/inactivegray</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorGray</item>
    </style>


    <style name="nf_setting_subtxt_textstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ntf_stg_sub</item>
        <item name="android:textSize">@dimen/font_18sp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>

    </style>

    <style name="nf_setting_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_0.5dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_15dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_20dp</item>
        <item name="android:background">#ffffff</item>
    </style>


    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:maxWidth">@dimen/dimen_20dp</item>
        <item name="android:scaleX">0.9</item>
        <item name="android:scaleY">0.9</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="style_text_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/brand_yellow</item>
        <!--        <item name="fontFamily">@font/avenirnextltpro_bold</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_text_regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/brand_yellow</item>
        <!--        <item name="fontFamily">@font/avenirnextltpro_regular</item>-->
        <item name="android:textStyle">normal</item>
    </style>

    <style name="style_button_bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_corner_button</item>
        <!--        <item name="fontFamily">@font/avenirnextltpro_bold</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputHintSize" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/font_25sp</item>
    </style>

    <style name="myVehicle_rowstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorRedError</item>
        <item name="android:textSize">@dimen/font_20sp</item>
    </style>

    <style name="plan_divider">
        <item name="android:layout_marginStart">@dimen/dimen_70dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_20dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_70dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_0.5dp</item>
        <item name="android:background">@color/colorGray</item>
        <item name="alpha">0.2</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:editTextColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="searchIcon">@android:drawable/ic_search_category_default</item>
        <item name="queryBackground">@color/colorWhite</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/searchbyname</item>
    </style>


    <style name="styleFullScreenDialog" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


