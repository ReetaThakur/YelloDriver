<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_40dp">

    <FrameLayout
        android:id="@+id/row_select_plan_FlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_plan_deselect">

        <LinearLayout
            android:id="@+id/row_select_plan_llMain"
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_plan_corner"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_320dp"
                android:background="@drawable/ic_plan_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/row_select_plan_tvPlanName"
                    style="@style/style_text_bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_30dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_30sp"
                    tools:text="@string/lbl_basic" />

                <View style="@style/plan_divider" />

                <TextView
                    android:id="@+id/row_select_plan_tvPlanPrice"
                    style="@style/style_text_bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_40sp"
                    tools:text="$199 / Day" />

                <TextView
                    android:id="@+id/row_select_plan_tvActiveUser"
                    style="@style/style_text_regular"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_22sp"
                    tools:text="100 monthly active users" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_minus50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/row_select_plan_tvValidity"
                    style="@style/style_text_regular"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_50dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_50dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:drawableStart="@drawable/ic_plan_checkbox_small"
                    android:gravity="center"
                    android:text="@string/lbl_limited_travel"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_20sp" />

                <TextView
                    android:id="@+id/row_select_plan_tvUnlimited"
                    style="@style/style_text_regular"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_50dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginEnd="@dimen/dimen_50dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:drawableStart="@drawable/ic_plan_checkbox_small"
                    android:gravity="center"
                    android:text="@string/lbl_limited_travel"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_20sp" />

                <!--                <TextView-->
                <!--                    style="@style/style_text_regular"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:layout_marginStart="@dimen/dimen_50dp"-->
                <!--                    android:layout_marginTop="@dimen/dimen_10dp"-->
                <!--                    android:layout_marginEnd="@dimen/dimen_50dp"-->
                <!--                    android:layout_marginBottom="@dimen/dimen_10dp"-->
                <!--                    android:drawableStart="@drawable/ic_plan_checkbox_small"-->
                <!--                    android:gravity="center"-->
                <!--                    android:text="@string/lbl_limited_travel"-->
                <!--                    android:textColor="@color/colorWhite"-->
                <!--                    android:textSize="@dimen/font_20sp" />-->

                <Button
                    android:id="@+id/row_select_plan_btnSelect"
                    style="@style/style_button_bold"
                    android:layout_marginStart="@dimen/dimen_60dp"
                    android:layout_marginTop="@dimen/dimen_40dp"
                    android:layout_marginEnd="@dimen/dimen_60dp"
                    android:layout_marginBottom="@dimen/dimen_40dp"
                    android:padding="@dimen/dimen_20dp"
                    android:text="@string/lbl_select"
                    android:textSize="@dimen/font_25sp" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>